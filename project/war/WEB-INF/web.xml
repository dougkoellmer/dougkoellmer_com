<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

		<listener>
		<listener-class>com.dougkoellmer.server.app.EntryPoint</listener-class>
	</listener>

	<!-- Servlets -->
	<servlet>
		<servlet-name>smTransactionServlet</servlet-name>
		<servlet-class>swarm.server.thirdparty.servlet.smTransactionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>smTransactionServlet</servlet-name>
		<url-pattern>/r.t</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>smSignInServlet</servlet-name>
		<servlet-class>swarm.server.thirdparty.servlet.smSignInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>smSignInServlet</servlet-name>
		<url-pattern>/r.signin</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>smAdminServlet</servlet-name>
		<servlet-class>swarm.server.thirdparty.servlet.smAdminServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>smAdminServlet</servlet-name>
		<url-pattern>/r.admin</url-pattern>
	</servlet-mapping>
	
		<servlet>
			<servlet-name>index_jsp</servlet-name>
			<jsp-file>/index.min.jsp</jsp-file>
		</servlet>
		
		<servlet-mapping>
			<servlet-name>index_jsp</servlet-name>
			<url-pattern>/</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>redirector</servlet-name>
			<servlet-class>com.dougkoellmer.server.thirdparty.servlets.RedirectServlet</servlet-class>
		</servlet>
		
		
		<servlet-mapping>
			<servlet-name>redirector</servlet-name>
			<url-pattern>/portfolio</url-pattern>
		</servlet-mapping>
		
		<servlet-mapping>
			<servlet-name>redirector</servlet-name>
			<url-pattern>/resume</url-pattern>
		</servlet-mapping>
		
		<servlet-mapping>
			<servlet-name>redirector</servlet-name>
			<url-pattern>/games/feed_the_bear</url-pattern>
		</servlet-mapping>
		
		
		
</web-app>